/**
 * Mobile Resume CSS - Modern Glassmorphic Design
 * Based on Interactive Style Guide specifications
 * GPU-optimized for 60fps, mobile-first responsive
 */

/* ============================================
   CSS VARIABLES (From Style Guide)
   ============================================ */

:root {
  /* Color Palette */
  --gradient-purple: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --gradient-pink: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  --gradient-blue: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  --gradient-indigo-purple: linear-gradient(to right, #667eea, #764ba2);
  --gradient-text: linear-gradient(to right, #818cf8, #ec4899);
  --gradient-cyan-blue: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);

  /* Semantic Colors */
  --color-success: #34d399;
  --color-error: #ef4444;
  --color-warning: #fbbf24;
  --color-info: #60a5fa;

  /* Glass Morphism */
  --glass-bg: rgba(255, 255, 255, 0.7);
  --glass-bg-dark: rgba(15, 23, 42, 0.8);
  --glass-border: rgba(255, 255, 255, 0.3);
  --glass-hover-border: rgba(99, 102, 241, 0.5);

  /* Timing Functions */
  --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);
  --ease-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

/* ============================================
   BASE & RESET
   ============================================ */

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 16px;
  line-height: 1.6;
  color: #1e293b;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #dbeafe 100%);
  background-size: 200% 200%;
  animation: gradientShift 15s ease infinite;
  overflow-x: hidden;
  position: relative;
}

@keyframes gradientShift {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

/* ============================================
   ANIMATED BACKGROUND SYSTEM
   ============================================ */

body::before {
  content: '';
  position: fixed;
  inset: 0;
  background-image:
    linear-gradient(rgba(59, 130, 246, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(59, 130, 246, 0.03) 1px, transparent 1px);
  background-size: 40px 40px;
  animation: gridMove 20s linear infinite;
  pointer-events: none;
  z-index: 0;
}

@keyframes gridMove {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 40px 40px;
  }
}

.floating-shape {
  position: fixed;
  border-radius: 50%;
  filter: blur(80px);
  opacity: 0.4;
  animation: float 20s ease-in-out infinite;
  pointer-events: none;
  will-change: transform;
  transform: translateZ(0);
  z-index: 1;
}

.shape-1 {
  width: 300px;
  height: 300px;
  background: radial-gradient(
    circle at center,
    rgba(102, 126, 234, 0.6) 0%,
    rgba(102, 126, 234, 0.4) 30%,
    rgba(118, 75, 162, 0.2) 60%,
    transparent 100%
  );
  top: 10%;
  left: -10%;
  animation-delay: 0s;
}

.shape-2 {
  width: 250px;
  height: 250px;
  background: radial-gradient(
    circle at center,
    rgba(79, 172, 254, 0.6) 0%,
    rgba(79, 172, 254, 0.4) 30%,
    rgba(0, 242, 254, 0.2) 60%,
    transparent 100%
  );
  top: 50%;
  right: -10%;
  animation-delay: -7s;
}

.shape-3 {
  width: 280px;
  height: 280px;
  background: radial-gradient(
    circle at center,
    rgba(240, 147, 251, 0.5) 0%,
    rgba(245, 87, 138, 0.3) 50%,
    transparent 100%
  );
  bottom: 15%;
  left: 20%;
  animation-delay: -14s;
}

@keyframes float {
  0%, 100% {
    transform: translate(0, 0) scale(1) translateZ(0);
  }
  33% {
    transform: translate(30px, -30px) scale(1.1) translateZ(0);
  }
  66% {
    transform: translate(-20px, 20px) scale(0.9) translateZ(0);
  }
}

/* ============================================
   GPU ACCELERATION
   ============================================ */

.gpu-accelerated {
  transform: translateZ(0);
  backface-visibility: hidden;
  perspective: 1000px;
  will-change: transform, opacity;
}

/* ============================================
   TYPOGRAPHY HIERARCHY
   ============================================ */

h1 {
  font-size: 32px;
  line-height: 1.2;
  font-weight: 700;
  color: #0f172a;
}

h2 {
  font-size: 24px;
  line-height: 1.3;
  font-weight: 600;
  color: #1e293b;
}

h3 {
  font-size: 20px;
  line-height: 1.4;
  font-weight: 600;
  color: #334155;
}

h4 {
  font-size: 16px;
  line-height: 1.5;
  font-weight: 600;
  color: #475569;
}

p {
  font-size: 16px;
  line-height: 1.6;
  color: #64748b;
}

/* ============================================
   LAYOUT CONTAINER
   ============================================ */

.container {
  width: 100%;
  max-width: 680px;
  margin: 0 auto;
  padding: 0 16px;
}

/* ============================================
   SKIP LINK (ACCESSIBILITY)
   ============================================ */

.skip-link {
  position: absolute;
  top: -40px;
  left: 0;
  background: #2563eb;
  color: white;
  padding: 8px 16px;
  text-decoration: none;
  z-index: 100;
}

.skip-link:focus {
  top: 0;
}

/* ============================================
   STICKY HEADER (GLASSMORPHIC)
   ============================================ */

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: var(--glass-bg);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border-bottom: 1px solid var(--glass-border);
  height: 60px;
  box-shadow:
    0 4px 16px rgba(0, 0, 0, 0.04),
    0 0 20px rgba(59, 130, 246, 0.05);
  transition: all 0.3s var(--ease-smooth);
}

.header-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  max-width: 680px;
  margin: 0 auto;
  padding: 0 16px;
  position: relative;
  z-index: 10;
}

.logo {
  font-size: 20px;
  font-weight: 700;
  color: #2563eb;
  text-decoration: none;
}

.logo-text {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background:
    radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.6), transparent 70%),
    var(--gradient-cyan-blue);
  color: white;
  border-radius: 10px;
  font-size: 18px;
  font-weight: 700;
  box-shadow:
    0 4px 12px rgba(37, 99, 235, 0.3),
    inset -1px -1px 2px rgba(0, 0, 0, 0.15),
    inset 1px 1px 2px rgba(255, 255, 255, 0.3);
  animation: subtlePulse 3s ease-in-out infinite;
  transform: translateZ(0);
}

@keyframes subtlePulse {
  0%, 100% {
    box-shadow:
      0 4px 12px rgba(37, 99, 235, 0.3),
      inset -1px -1px 2px rgba(0, 0, 0, 0.15),
      inset 1px 1px 2px rgba(255, 255, 255, 0.3);
  }
  50% {
    box-shadow:
      0 6px 16px rgba(37, 99, 235, 0.4),
      0 0 20px rgba(6, 182, 212, 0.2),
      inset -1px -1px 2px rgba(0, 0, 0, 0.15),
      inset 1px 1px 2px rgba(255, 255, 255, 0.4);
  }
}

/* ============================================
   MOBILE MENU
   ============================================ */

.hamburger {
  width: 44px;
  height: 44px;
  background: none;
  border: none;
  cursor: pointer;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 5px;
  padding: 8px;
}

.hamburger-line {
  display: block;
  width: 24px;
  height: 2px;
  background-color: #334155;
  transition: transform 150ms ease;
}

.menu {
  position: fixed;
  top: 0;
  right: -100%;
  width: 280px;
  height: 100vh;
  background: var(--glass-bg);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  border-left: 1px solid var(--glass-border);
  z-index: 1001;
  transition: right 300ms var(--ease-smooth);
  overflow-y: auto;
  box-shadow:
    -4px 0 24px rgba(0, 0, 0, 0.08),
    -2px 0 12px rgba(59, 130, 246, 0.1);
}

.menu.active {
  right: 0;
}

.menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(15, 23, 42, 0.6);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
  z-index: 999;
  opacity: 0;
  pointer-events: none;
  transition: opacity 300ms var(--ease-smooth);
}

.menu-overlay.active {
  opacity: 1;
  pointer-events: auto;
}

.menu-close {
  position: absolute;
  top: 8px;
  right: 8px;
  width: 44px;
  height: 44px;
  background: none;
  border: none;
  cursor: pointer;
  color: #64748b;
  font-size: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  transition: background-color 150ms ease;
}

.menu-close:hover {
  background-color: #f1f5f9;
  color: #2563eb;
}

.menu-list {
  list-style: none;
  padding: 80px 24px 24px;
}

.menu-link {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  color: #334155;
  text-decoration: none;
  border-radius: 8px;
  transition: background-color 150ms ease;
  min-height: 44px;
  font-size: 16px;
  margin-bottom: 4px;
}

.menu-link i {
  width: 20px;
  text-align: center;
  color: #64748b;
}

.menu-link:hover,
.menu-link:focus {
  background-color: #f1f5f9;
  color: #2563eb;
}

.menu-link:hover i,
.menu-link:focus i {
  color: #2563eb;
}

/* ============================================
   HERO SECTION
   ============================================ */

.hero {
  padding-top: 100px;
  padding-bottom: 48px;
  text-align: center;
  background: linear-gradient(to bottom, #ffffff, #f8fafc);
}

.hero-badge {
  width: 80px;
  height: 80px;
  margin: 0 auto 24px;
  background: linear-gradient(135deg, #2563eb, #06b6d4);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
}

.hero-badge-text {
  font-size: 32px;
  font-weight: 700;
  color: white;
}

.hero-title {
  margin-bottom: 8px;
  color: #0f172a;
}

.hero-subtitle {
  font-size: 18px;
  color: #2563eb;
  margin-bottom: 16px;
  font-weight: 600;
}

.hero-tagline {
  font-size: 16px;
  color: #64748b;
  margin-bottom: 32px;
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
}

/* ============================================
   BADGE GRID
   ============================================ */

.hero-badges {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 8px;
  margin-bottom: 32px;
  max-width: 400px;
  margin-left: auto;
  margin-right: auto;
}

.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 8px 12px;
  background-color: #eff6ff;
  border: 1px solid #bfdbfe;
  border-radius: 6px;
  color: #2563eb;
  font-size: 13px;
  font-weight: 600;
  text-align: center;
  min-height: 36px;
}

@media (min-width: 480px) {
  .hero-badges {
    grid-template-columns: repeat(4, 1fr);
    max-width: 600px;
  }
}

/* ============================================
   BUTTONS
   ============================================ */

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  min-height: 44px;
  padding: 12px 24px;
  font-size: 16px;
  font-weight: 600;
  text-decoration: none;
  border-radius: 8px;
  border: 2px solid transparent;
  cursor: pointer;
  transition: all 150ms ease;
}

.btn-primary {
  background-color: #2563eb;
  color: #ffffff;
  border-color: #2563eb;
}

.btn-primary:hover,
.btn-primary:focus {
  background-color: #1d4ed8;
  border-color: #1d4ed8;
}

.btn-secondary {
  background-color: transparent;
  color: #2563eb;
  border-color: #2563eb;
}

.btn-secondary:hover,
.btn-secondary:focus {
  background-color: #eff6ff;
}

.btn-large {
  padding: 16px 32px;
  font-size: 18px;
}

.hero-actions {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 32px;
  align-items: center;
}

@media (min-width: 480px) {
  .hero-actions {
    flex-direction: row;
    justify-content: center;
  }
}

/* ============================================
   SOCIAL LINKS
   ============================================ */

.social-links {
  display: flex;
  gap: 12px;
  justify-content: center;
}

.social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  background-color: #f1f5f9;
  color: #64748b;
  border-radius: 8px;
  text-decoration: none;
  transition: all 150ms ease;
  font-size: 18px;
}

.social-link:hover,
.social-link:focus {
  background-color: #e2e8f0;
  color: #2563eb;
}

/* ============================================
   SECTION SPACING
   ============================================ */

.section {
  padding: 48px 0;
}

.section-title {
  font-size: 28px;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 12px;
  text-align: center;
}

.section-description {
  font-size: 16px;
  color: #64748b;
  margin-bottom: 32px;
  text-align: center;
}

/* ============================================
   CARDS
   ============================================ */

.card {
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
  padding: 24px;
  margin-bottom: 16px;
}

.card-title {
  font-size: 20px;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 16px;
  display: flex;
  align-items: center;
  gap: 12px;
}

.card-title i {
  color: #2563eb;
  font-size: 24px;
}

.card-text {
  font-size: 16px;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 12px;
}

.card-text:last-child {
  margin-bottom: 0;
}

/* ============================================
   APPROACH LIST
   ============================================ */

.approach-list {
  list-style: none;
  padding: 0;
}

.approach-item {
  display: flex;
  gap: 16px;
  margin-bottom: 20px;
  align-items: flex-start;
}

.approach-item:last-child {
  margin-bottom: 0;
}

.approach-item i {
  font-size: 24px;
  color: #2563eb;
  flex-shrink: 0;
  margin-top: 4px;
}

.approach-item h4 {
  font-size: 16px;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 4px;
}

.approach-item p {
  font-size: 14px;
  color: #64748b;
}

/* ============================================
   STATS CARDS
   ============================================ */

.stats-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 12px;
}

@media (min-width: 480px) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

.stat-card {
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
  padding: 20px;
  text-align: center;
}

.stat-number {
  font-size: 28px;
  font-weight: 700;
  color: #2563eb;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 14px;
  color: #64748b;
  font-weight: 500;
}

/* ============================================
   SKILLS SECTION
   ============================================ */

.skills-category {
  margin-bottom: 48px;
}

.skills-category:last-child {
  margin-bottom: 0;
}

.skills-category-title {
  font-size: 20px;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  gap: 12px;
}

.skills-category-title i {
  color: #2563eb;
  font-size: 22px;
}

.skills-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 12px;
}

@media (min-width: 480px) {
  .skills-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

.skill-card {
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
  padding: 20px;
  text-align: center;
}

.skill-card i {
  font-size: 32px;
  color: #2563eb;
  margin-bottom: 12px;
  display: block;
}

.skill-card h4 {
  font-size: 16px;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 4px;
}

.skill-card p {
  font-size: 13px;
  color: #64748b;
  margin: 0;
}

.skill-card-compact {
  padding: 16px;
}

.skill-card-compact i {
  font-size: 24px;
  margin-bottom: 8px;
}

.skill-card-compact h4 {
  font-size: 14px;
}

.skills-grid-compact {
  grid-template-columns: repeat(2, 1fr);
  gap: 8px;
}

@media (min-width: 480px) {
  .skills-grid-compact {
    grid-template-columns: repeat(3, 1fr);
  }
}

/* ============================================
   LANGUAGES
   ============================================ */

.languages-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.language-item {
  display: flex;
  align-items: center;
  gap: 16px;
  padding: 16px;
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
}

.language-flag {
  width: 44px;
  height: 44px;
  background-color: #eff6ff;
  border: 1px solid #bfdbfe;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: 700;
  color: #2563eb;
  flex-shrink: 0;
}

.language-name {
  font-size: 16px;
  color: #334155;
  font-weight: 500;
}

/* ============================================
   VERTICAL TIMELINE
   ============================================ */

.timeline {
  position: relative;
  padding-left: 32px;
  margin-top: 32px;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 12px;
  top: 8px;
  bottom: 8px;
  width: 2px;
  background-color: #e2e8f0;
}

.timeline-item {
  position: relative;
  padding-bottom: 32px;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-item:last-child .timeline::before {
  bottom: auto;
  height: 100%;
}

.timeline-marker {
  position: absolute;
  left: -25px;
  top: 8px;
  width: 12px;
  height: 12px;
  background-color: #2563eb;
  border: 3px solid #ffffff;
  border-radius: 50%;
  box-shadow: 0 0 0 3px #e2e8f0;
  z-index: 1;
}

.timeline-marker-current {
  background-color: #22c55e;
  box-shadow: 0 0 0 3px #dcfce7;
}

/* ============================================
   EXPERIENCE CARDS
   ============================================ */

.experience-card {
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
}

.experience-card-current {
  border-color: #22c55e;
  box-shadow: 0 0 0 1px #22c55e;
}

.experience-badge {
  display: inline-block;
  padding: 4px 12px;
  background-color: #dcfce7;
  color: #16a34a;
  border-radius: 6px;
  font-size: 12px;
  font-weight: 600;
  margin-bottom: 16px;
}

.experience-header {
  display: flex;
  gap: 12px;
  margin-bottom: 16px;
  cursor: pointer;
}

.experience-icon {
  width: 44px;
  height: 44px;
  background-color: #eff6ff;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #2563eb;
  font-size: 20px;
  flex-shrink: 0;
}

.experience-header-content {
  flex: 1;
  min-width: 0;
}

.experience-title {
  font-size: 18px;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 4px;
}

.experience-company {
  font-size: 16px;
  color: #2563eb;
  margin-bottom: 8px;
  font-weight: 500;
}

.experience-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  font-size: 13px;
  color: #64748b;
}

.experience-meta span {
  display: flex;
  align-items: center;
  gap: 4px;
}

.experience-meta i {
  font-size: 12px;
}

.expand-toggle {
  width: 36px;
  height: 36px;
  background: none;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #64748b;
  transition: all 150ms ease;
  flex-shrink: 0;
}

.expand-toggle:hover,
.expand-toggle:focus {
  background-color: #f1f5f9;
  color: #2563eb;
  border-color: #2563eb;
}

.expand-toggle i {
  transition: transform 150ms ease;
}

.expand-toggle[aria-expanded="true"] i {
  transform: rotate(180deg);
}

.experience-skills {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  margin-bottom: 12px;
}

.skill-tag {
  display: inline-block;
  padding: 4px 10px;
  background-color: #f1f5f9;
  color: #334155;
  font-size: 12px;
  font-weight: 500;
  border-radius: 6px;
  border: 1px solid #e2e8f0;
}

.experience-details {
  max-height: 0;
  overflow: hidden;
  transition: max-height 300ms ease;
}

.experience-details.expanded {
  max-height: 2000px;
}

.experience-details-title {
  font-size: 16px;
  font-weight: 600;
  color: #0f172a;
  margin: 16px 0 12px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.experience-details-title i {
  color: #f59e0b;
  font-size: 18px;
}

.experience-achievements {
  list-style: none;
  padding: 0;
  margin-bottom: 16px;
}

.experience-achievements li {
  display: flex;
  gap: 12px;
  margin-bottom: 12px;
  font-size: 14px;
  color: #64748b;
  line-height: 1.6;
}

.experience-achievements li:last-child {
  margin-bottom: 0;
}

.experience-achievements i {
  color: #22c55e;
  font-size: 16px;
  flex-shrink: 0;
  margin-top: 2px;
}

.experience-all-skills {
  margin-top: 16px;
  padding-top: 16px;
  border-top: 1px solid #e2e8f0;
}

.experience-all-skills h4 {
  font-size: 14px;
  font-weight: 600;
  color: #64748b;
  margin-bottom: 12px;
}

.experience-duration {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 13px;
  color: #64748b;
  margin-top: 16px;
  padding-top: 16px;
  border-top: 1px solid #e2e8f0;
}

.experience-duration i {
  color: #94a3b8;
}

/* ============================================
   SERVICE CARDS
   ============================================ */

.services-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16px;
}

@media (min-width: 480px) {
  .services-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

.service-card {
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
  padding: 24px;
  text-align: center;
}

.service-icon {
  font-size: 36px;
  color: #2563eb;
  margin-bottom: 16px;
}

.service-title {
  font-size: 18px;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 8px;
}

.service-description {
  font-size: 14px;
  color: #64748b;
  line-height: 1.6;
}

/* ============================================
   CONTACT SECTION
   ============================================ */

.contact-card {
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
  padding: 32px 24px;
}

.contact-title {
  font-size: 20px;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 16px;
}

.contact-info,
.contact-links {
  margin-bottom: 32px;
}

.contact-list,
.quick-links-list {
  list-style: none;
  padding: 0;
}

.contact-item,
.quick-links-list li {
  margin-bottom: 12px;
}

.contact-item:last-child,
.quick-links-list li:last-child {
  margin-bottom: 0;
}

.contact-link,
.quick-link {
  display: flex;
  align-items: center;
  gap: 12px;
  color: #334155;
  text-decoration: none;
  padding: 8px;
  border-radius: 8px;
  transition: background-color 150ms ease;
  min-height: 44px;
}

.contact-link:hover,
.contact-link:focus,
.quick-link:hover,
.quick-link:focus {
  background-color: #f1f5f9;
  color: #2563eb;
}

.contact-link i,
.quick-link i {
  width: 20px;
  text-align: center;
  color: #64748b;
  font-size: 18px;
}

.contact-link:hover i,
.contact-link:focus i,
.quick-link:hover i,
.quick-link:focus i {
  color: #2563eb;
}

.contact-item i {
  width: 20px;
  text-align: center;
  color: #64748b;
  font-size: 18px;
  margin-right: 12px;
}

.contact-cta {
  text-align: center;
  padding-top: 24px;
  border-top: 1px solid #e2e8f0;
}

.cta-text {
  font-size: 18px;
  font-weight: 600;
  color: #334155;
  margin-bottom: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.cta-text i {
  color: #2563eb;
  font-size: 20px;
}

/* ============================================
   FOOTER
   ============================================ */

.footer {
  background-color: #f8fafc;
  border-top: 1px solid #e2e8f0;
  padding: 24px 0;
  margin-top: 48px;
}

.footer-text {
  text-align: center;
  font-size: 14px;
  color: #64748b;
}

/* ============================================
   FOCUS STATES (ACCESSIBILITY)
   ============================================ */

*:focus-visible {
  outline: 2px solid #2563eb;
  outline-offset: 2px;
}

button:focus-visible,
a:focus-visible {
  outline: 2px solid #2563eb;
  outline-offset: 2px;
}

/* ============================================
   SMOOTH SCROLL
   ============================================ */

html {
  scroll-behavior: smooth;
}

@media (prefers-reduced-motion: reduce) {
  html {
    scroll-behavior: auto;
  }

  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* ============================================
   DARK MODE SUPPORT
   ============================================ */

@media (prefers-color-scheme: dark) {
  body {
    background-color: #0f172a;
    color: #e2e8f0;
  }

  h1, h2, h3, h4 {
    color: #f8fafc;
  }

  p {
    color: #cbd5e1;
  }

  .header {
    background-color: #1e293b;
    border-bottom-color: #334155;
  }

  .logo {
    color: #06b6d4;
  }

  .hamburger-line {
    background-color: #e2e8f0;
  }

  .menu {
    background-color: #1e293b;
    border-left-color: #334155;
  }

  .menu-link {
    color: #e2e8f0;
  }

  .menu-link:hover,
  .menu-link:focus {
    background-color: #334155;
    color: #06b6d4;
  }

  .hero {
    background: linear-gradient(to bottom, #1e293b, #0f172a);
  }

  .badge {
    background-color: rgba(6, 182, 212, 0.1);
    border-color: rgba(6, 182, 212, 0.3);
    color: #06b6d4;
  }

  .btn-primary {
    background-color: #06b6d4;
    border-color: #06b6d4;
  }

  .btn-primary:hover,
  .btn-primary:focus {
    background-color: #0891b2;
    border-color: #0891b2;
  }

  .btn-secondary {
    color: #06b6d4;
    border-color: #06b6d4;
  }

  .btn-secondary:hover,
  .btn-secondary:focus {
    background-color: rgba(6, 182, 212, 0.1);
  }

  .social-link {
    background-color: #334155;
    color: #cbd5e1;
  }

  .social-link:hover,
  .social-link:focus {
    background-color: #475569;
    color: #06b6d4;
  }

  .card,
  .stat-card,
  .skill-card,
  .experience-card,
  .service-card,
  .contact-card,
  .language-item {
    background-color: #1e293b;
    border-color: #334155;
  }

  .stat-number {
    color: #06b6d4;
  }

  .skill-card i,
  .service-icon,
  .experience-icon {
    background-color: rgba(6, 182, 212, 0.1);
    color: #06b6d4;
  }

  .timeline::before {
    background-color: #334155;
  }

  .timeline-marker {
    background-color: #06b6d4;
    border-color: #1e293b;
    box-shadow: 0 0 0 3px #334155;
  }

  .timeline-marker-current {
    background-color: #22c55e;
    box-shadow: 0 0 0 3px #16a34a;
  }

  .experience-badge {
    background-color: rgba(34, 197, 94, 0.1);
    color: #22c55e;
  }

  .expand-toggle {
    border-color: #334155;
    color: #cbd5e1;
  }

  .expand-toggle:hover,
  .expand-toggle:focus {
    background-color: #334155;
    color: #06b6d4;
  }

  .skill-tag {
    background-color: #334155;
    color: #e2e8f0;
    border-color: #475569;
  }

  .menu-overlay.active {
    background-color: rgba(0, 0, 0, 0.7);
  }

  .language-flag {
    background-color: rgba(6, 182, 212, 0.1);
    border-color: rgba(6, 182, 212, 0.3);
    color: #06b6d4;
  }

  .contact-link,
  .quick-link {
    color: #e2e8f0;
  }

  .contact-link:hover,
  .contact-link:focus,
  .quick-link:hover,
  .quick-link:focus {
    background-color: #334155;
    color: #06b6d4;
  }

  .menu-close:hover {
    background-color: #334155;
  }

  .footer {
    background-color: #0f172a;
    border-top-color: #334155;
  }
}

/* ============================================
   PRINT STYLES
   ============================================ */

@media print {
  body {
    background-color: #ffffff;
    color: #000000;
  }

  .header,
  .menu,
  .menu-overlay,
  .social-links,
  .hero-actions,
  .expand-toggle,
  .menu-close,
  .hamburger {
    display: none !important;
  }

  .hero {
    padding-top: 0;
  }

  .section {
    page-break-inside: avoid;
  }

  .experience-card,
  .skill-card,
  .service-card {
    page-break-inside: avoid;
  }

  .experience-details {
    max-height: none !important;
  }

  a {
    text-decoration: underline;
  }

  .timeline::before {
    background-color: #333;
  }
}

/* ============================================
   RESPONSIVE ENHANCEMENTS
   ============================================ */

@media (min-width: 768px) {
  .container {
    padding: 0 24px;
  }

  .section {
    padding: 64px 0;
  }

  .section-title {
    font-size: 32px;
  }

  h1 {
    font-size: 40px;
  }

  .hero-subtitle {
    font-size: 20px;
  }

  .services-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}
